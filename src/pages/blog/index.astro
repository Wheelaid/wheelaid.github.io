---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import {SITE_TITLE, SITE_DESCRIPTION} from '../../consts';
import {getCollection} from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import Image from "astro/components/Image.astro";

const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
<head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION}/>
    <style>

        ul {
            @apply flex flex-wrap gap-8 list-none m-0 p-0 justify-between;
        }
        ul li {
            @apply w-[calc(50%_-_1rem)] first:w-full first:text-center first:mb-4;
        }
        ul li * {
            @apply no-underline duration-200;
        }
        ul li:first-child img {
            @apply w-full;
        }
        ul li:first-child .title {
            @apply text-4xl;
        }
        ul li img {
            @apply mb-2 rounded-xl;
        }
        ul li a {
            @apply block;
        }
        ul li a:hover h4,
        ul li a:hover .date {
            @apply text-danube-500;
        }
        ul a:hover img {
            @apply shadow-md;
        }
        @media (max-width: 768px) {
            ul {
                @apply gap-2;
            }
            ul li {
                @apply w-full text-center first:mb-0;
            }
            ul li:first-child .title {
                @apply text-2xl;
            }
        }

    </style>
</head>
<body>
<Header/>
<main>
    <section>
        <ul>
            {
                posts.map((post) => (
                        <li>
                            <a href={`/blog/${post.slug}/`}>
                                {post.data.heroImage ?
                                        <Image width={720} height={360} src={post.data.heroImage} alt=""></Image> : ""}
                                <h4 class="m-0 text-danube-950 leading-none">{post.data.title}</h4>
                                <p class="m-0 text-danube-500">
                                    <FormattedDate date={post.data.pubDate}/>
                                </p>
                            </a>
                        </li>
                ))
            }
        </ul>
    </section>
</main>
<Footer/>
</body>
</html>
